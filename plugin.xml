<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.devblocks.com/schema/plugin.xsd">
	<id>wgm.twilio</id>
	<name>[WGM] Twilio.com Integration</name>
	<description>This plugin provides integration with Twilio.com for phone/SMS/voicemail functionality.</description>
	<author>WebGroup Media, LLC.</author>
	<revision>1</revision>
	<link>http://www.cerb5.com/</link>
	<image>plugin.png</image>
 
 	<!-- Requirements -->

	<requires>
		<app_version min="5.6" max="5.6.3" />
		<php_extension name="curl" />
	</requires>
 
	<!-- Plugin Dependencies -->
	
	<dependencies>
		<require plugin_id="cerberusweb.core" version="5.3.0" />
	</dependencies>

	<!-- Patches -->
	
	<patches>
		<!--
		<patch version="5.3.0" revision="1" file="patches/5.3.0.php" />
		-->
	</patches>
	
	<!-- Exported Classes -->
	
	<class_loader>
		<file path="api/App.php">
			<class name="WgmTwilio_API" />
		</file>
		
		<file path="libs/twilio-php/twilio.php">
			<class name="TwilioException" />
			<class name="TwilioRestClient" />
			<class name="TwilioRestResponse" />
			<class name="TwilioUtils" />
			<!--
			<class name="Conference" />
			<class name="Dial" />
			<class name="Gather" />
			<class name="Hangup" />
			<class name="Number" />
			<class name="Pause" />
			<class name="Play" />
			<class name="Record" />
			<class name="Redirect" />
			<class name="Reject" />
			<class name="Response" />
			<class name="Say" />
			<class name="Sms" />
			<class name="Verb" />
			-->
		</file>
	</class_loader>

	<!-- Extensions -->
 
	<extensions>

		<!-- Setup Page Menu Item -->

		<extension point="cerberusweb.ui.page.menu.item">
			<id>wgmtwilio.setup.menu.plugins.twilio</id>
			<name>Twilio Plugins Menu Item</name>
			<class>
				<file>api/App.php</file>
				<name>WgmTwilio_SetupPluginsMenuItem</name>
			</class>
			<params>
				<param key="page_id" value="core.page.configuration" />
				<param key="menu_id" value="core.setup.menu.plugins" />
			</params>
		</extension>
		
		<!-- Setup Page Sections -->
		
		<extension point="cerberusweb.ui.page.section">
			<id>wgmtwilio.setup.twilio</id>
			<name>Setup Page Twilio Section</name>
			<class>
				<file>api/App.php</file>
				<name>WgmTwilio_SetupSection</name>
			</class>
			<params>
				<param key="page_id" value="core.page.configuration" />
				<param key="uri" value="twilio" />
			</params>
		</extension>
		
		<!-- Event Actions -->
		
		<extension point="devblocks.event.action">
			<id>wgmtwilio.event.action.send_sms</id>
			<name>Send SMS Event Action</name>
			<class>
				<file>api/App.php</file>
				<name>WgmTwilio_EventActionSendSms</name>
			</class>
			<params>
				<param key="label" value="Send SMS via Twilio" />
			</params>
		</extension>
		
    </extensions> 
</plugin>
